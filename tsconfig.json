{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc"
  },
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@utils": [
        "./ts/utils.ts"
      ],
      "@ts/*": [
        "./ts/*"
      ]
    },
    "forceConsistentCasingInFileNames": true
  }
}